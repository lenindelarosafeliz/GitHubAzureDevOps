@model IEnumerable<Persona>

@{
    ViewData["Title"] = "Index";
}

@section Styles {


}

@section Scripts {
    <script src="~/js/views/persona/index.js"></script>
    <script src="~/js/views/persona/createOrEdit.js"></script>
}

<section class="content-header">
    <h1>
        Personas
    </h1>
    <ol class="breadcrumb">
        <li><a class="nav-link text-dark" asp-controller="Home" asp-action="Index"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Personas</li>
    </ol>
</section>

<!-- Main content -->
<section class="content container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Listado de Personas</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <div class="card">
                        @*<div class="card-header">
                            <span class="font-weight-bold mt-5">Personas</span>
                        </div>*@
                        <div class="card-body">
                            <div id="personaGrid" style="width: 100%; height: 512px;"></div>
                            <br>
                            <label>
                                <input type="checkbox" id="autoLoad" onclick="refreshGrid(this.checked)" checked>
                                Auto Load
                            </label>
                        </div>
                    </div>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>